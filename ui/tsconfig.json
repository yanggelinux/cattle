{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "vite.config.ts"
  ],
  // 关键：告诉 TS 先试 .vue 后缀
  "moduleSuffixes": [".vue", ""],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".", // 必须添加，与 paths 配合
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
